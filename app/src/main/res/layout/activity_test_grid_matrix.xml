<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="1">

        <ImageView
            android:id="@+id/image"
            android:layout_width="200dp"
            android:layout_height="160dp"
            android:scaleType="matrix"
            android:src="@drawable/pic1"/>

    </LinearLayout>

    <TableLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="10dp"
        android:background="#fac2fa">

        <TableRow
            android:layout_marginBottom="5dp">

            <EditText
                android:id="@+id/input_01"
                android:layout_width="0dp"
                android:layout_height="30dp"
                android:layout_weight="1"
                android:hint="X轴放大倍数"
                android:inputType="numberDecimal"
                android:background="@color/white"
                android:singleLine="true"/>

            <View
                android:layout_width="5dp"
                android:layout_height="match_parent"/>

            <EditText
                android:id="@+id/input_02"
                android:layout_width="0dp"
                android:layout_height="30dp"
                android:layout_weight="1"
                android:hint="X轴错切"
                android:inputType="numberDecimal"
                android:background="@color/white"
                android:singleLine="true"/>

            <View
                android:layout_width="5dp"
                android:layout_height="match_parent"/>

            <EditText
                android:id="@+id/input_03"
                android:layout_width="0dp"
                android:layout_height="30dp"
                android:layout_weight="1"
                android:hint="X轴偏移"
                android:inputType="numberDecimal"
                android:background="@color/white"
                android:singleLine="true"/>

        </TableRow>

        <TableRow
            android:layout_marginBottom="5dp">

            <EditText
                android:id="@+id/input_04"
                android:layout_width="0dp"
                android:layout_height="30dp"
                android:layout_weight="1"
                android:hint="Y轴错切"
                android:inputType="numberDecimal"
                android:background="@color/white"
                android:singleLine="true"/>

            <View
                android:layout_width="5dp"
                android:layout_height="match_parent"/>

            <EditText
                android:id="@+id/input_05"
                android:layout_width="0dp"
                android:layout_height="30dp"
                android:layout_weight="1"
                android:hint="Y轴缩小倍数"
                android:inputType="numberDecimal"
                android:background="@color/white"
                android:singleLine="true"/>

            <View
                android:layout_width="5dp"
                android:layout_height="match_parent"/>

            <EditText
                android:id="@+id/input_06"
                android:layout_width="0dp"
                android:layout_height="30dp"
                android:layout_weight="1"
                android:hint="Y轴偏移"
                android:inputType="numberDecimal"
                android:background="@color/white"
                android:singleLine="true"/>

        </TableRow>

        <TableRow>

            <EditText
                android:id="@+id/input_07"
                android:layout_width="0dp"
                android:layout_height="30dp"
                android:layout_weight="1"
                android:inputType="numberDecimal"
                android:background="@color/white"
                android:singleLine="true"/>

            <View
                android:layout_width="5dp"
                android:layout_height="match_parent"/>

            <EditText
                android:id="@+id/input_08"
                android:layout_width="0dp"
                android:layout_height="30dp"
                android:layout_weight="1"
                android:inputType="numberDecimal"
                android:background="@color/white"
                android:singleLine="true"/>

            <View
                android:layout_width="5dp"
                android:layout_height="match_parent"/>

            <EditText
                android:id="@+id/input_09"
                android:layout_width="0dp"
                android:layout_height="30dp"
                android:layout_weight="1"
                android:inputType="numberDecimal"
                android:background="@color/white"
                android:singleLine="true"/>

        </TableRow>

    </TableLayout>

    <Button
        android:id="@+id/submit"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:onClick="onClick"
        android:text="执行"/>

</LinearLayout>