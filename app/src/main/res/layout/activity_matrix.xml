<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#c9c4c4">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="1">

        <com.zarddy.studyandroid.matrix.view.MatrixImageView
            android:id="@+id/image"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="30dp"
            android:background="@drawable/bg"
            android:src="@drawable/light_thumb"
            app:src="@drawable/light2_thumb"
            app:controlDrawable="@drawable/shape_white_circle"/>

    </RelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <Button
            android:id="@+id/startChange"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="变形"
            android:onClick="onClick"/>

        <Button
            android:id="@+id/endChange"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="取消变形"
            android:onClick="onClick"/>

    </LinearLayout>

</LinearLayout>